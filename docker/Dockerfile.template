FROM ${BASE_IMAGE}:${BASE_TAG}

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        python3 \
        python3-pip \
        python3-setuptools \
        python-is-python3 \
        nodejs

RUN pip install --break-system-packages --upgrade pip && \
    pip install --break-system-packages \
    Django==5.1.4 \
    djangorestframework==3.15.2 \
    django-cors-headers==4.6.0

RUN ${BUILD_COMMAND}
